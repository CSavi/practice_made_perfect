<h2><center>STUDENTS</h2></center>

<p class='important'>Sorted by student level</p><br>


        <ul><center>
        <% @students.beginner_level.each do |student| %>
                <li>Student: <%= student.name.capitalize %><br>
                Category: <%= student.category.capitalize %><br>
                Level: <%= student.level %><br><br>
                <button class="js-more" data-id="<%= student.id %>">View Performed Songs</button><br><br>
                
                <% if logged_in? %>
                        <%= link_to 'View/Edit Student', student_path(student) %></li><br><br>
                <% end %>
        <% end %>
        </ul></center>

        <ul><center>
        <% @students.moderate_level.each do |student| %>
                <li>Student: <%= student.name.capitalize %><br>
                Category: <%= student.category.capitalize %><br>
                Level: <%= student.level %><br><br>
                <button class="js-more" data-id="<%= student.id %>">View Performed Songs</button><br><br>
                <% if logged_in? %>
                <%= link_to 'View/Edit Student', student_path(student) %></li><br><br>
        <% end %>
                
        <% end %>
        </ul></center>

        <ul><center>
        <% @students.highest_level.each do |student| %>
                <li>Student: <%= student.name.capitalize %><br>
                Category: <%= student.category.capitalize %><br>
                Level: <%= student.level %><br><br>
                <button class="js-more" data-id="<%= student.id %>">View Performed Songs</button><br><br>
                <% if logged_in? %>
                <%= link_to 'View/Edit Student', student_path(student) %></li><br><br>
        <% end %>
                
        <% end %>
        </ul></center>

<script type="text/javascript" charset="utf-8">
$(function() { 
        $(".js-more").on('click', function() {
              
                var id = $(this).data("id");
                $.get("/students/" + id + ".json", function(data) {
                        var studentData = data;
                        var songText = "<p>" + studentData['song_name'] + "</p>";
                        $(".js-more").html(songText);
                });
        });
});
</script>
