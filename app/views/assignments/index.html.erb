<h2><center>ASSIGNMENTS</h2></center>
<p class="important">Select by:</p><center><br>
        <%= form_tag("/instructors/#{@instructor.id}/assignments", method: "get", id: "filter-form") do %>
                <%= select_tag "hour_type", options_for_select(["Lesson Hours", "Lesson Planning Hours", "Created", "Updated"]), include_blank: true %>
                <%= submit_tag "Filter" %>
        <% end %></p></center>


<ul><center>
<% @assignments.each do |assignment| %>
        <p>Title: <%= assignment.title %><br>
        Created: <%= assignment.created_at.strftime('%b %d %y') %> &nbsp; Updated: <%= assignment.updated_at.strftime('%b %d %y') %><br>
        <%= link_to 'View/Edit Assignment', instructor_assignment_path(assignment.instructor, assignment) %>
<% end %>
</ul></center>

