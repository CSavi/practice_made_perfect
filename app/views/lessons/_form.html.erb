<br>
<div class='form-for'><center>
    <%= form_for(lesson) do |f| %>
        <%= f.label 'Lesson Time:' %>
        <%= f.datetime_field :lesson_datetime, ampm: true %><br><br>
        
        <%= f.label 'Description:' %>
        <%= f.text_area :description, class: 'form-field' %><br><br>
        <%= f.label 'Select Student:' %>
        <%= f.collection_select(:student_id, Student.all, :id, :name, prompt: true) %><br><br>
        <%= f.submit submit_name%>
    <% end %></center>