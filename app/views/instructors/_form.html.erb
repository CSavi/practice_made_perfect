<br><br>
<div class="form-div"><center>
    <%= form_for(@instructor) do |f| %>
    <div>
        <%= f.label 'Name', name: 'name', required: true %>
        <%= f.text_field :name %>
    </div><br>

    <div>
         <%= f.label 'Category' %>
         <%= f.text_field :category %>
    </div>
    <br>

    <div>
        <%= f.label 'Email' %>
        <%= f.text_field :email %>
    </div><br>
    <div>
        <%= f.label 'Password' %>
        <%= f.password_field :password %>
    </div>
    <br>

    <div>
        <%= f.label 'Password Confirmation' %>
        <%= f.password_field :password_confirmation %>
    </div><br>

        <%= f.submit %>
    <br><br>

    <% end %>
</div></center>

